@page "/"
@using BeautyBeast.Frontend.Dtos
@inject Services.PostService PostsService
@inject Services.StatusService StatusService

<div class="container mt-4">
    <h5 class="mb-3">Dashboard</h5>

    @if (posts == null || statuses == null)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <div class="row">
            @foreach (var post in posts)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text"><strong>[POST]</strong> @post.Description</p>
                        </div>
                    </div>
                </div>
            }

            @foreach (var status in statuses)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text"><strong>[STATUS]</strong> @status.Text</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<PostDto> posts = new();
    private List<StatusDto> statuses = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            posts = await PostsService.GetAllPostsAsync();
            statuses = await StatusService.GetAllStatusesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }
}