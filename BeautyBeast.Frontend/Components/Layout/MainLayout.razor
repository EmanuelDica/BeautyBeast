@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@inject Services.AuthenticationService AuthService
@using Microsoft.AspNetCore.Components.Routing
@using BeautyBeast.Frontend.Components.Layout

@code {
    private string? UserRole;

    protected override async Task OnInitializedAsync()
    {
        UserRole = await AuthService.GetUserRoleAsync();
    }
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        @* Button to Toggle Side Drawer (Offcanvas) *@
        <button class="navbar-brand btn btn-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#sideDrawer">
            BeautyBeast
        </button>

        @* Navbar Toggle Button for Mobile *@
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        @* Navbar Items *@
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/users/account">My Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">Dashboard</a>
                </li>

                @if (UserRole == "Artist")
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Manage
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/treatments/manage">💆 Treatments</a></li>
                            <li><a class="dropdown-item" href="/achievements/manage">🏆 Achievements</a></li>
                        </ul>
                    </li>
                }

                @if (UserRole == "Client")
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/mybookings">📅 My Bookings</a>
                    </li>
                }

                @* Post Dropdown Menu *@
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        POST
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="/users/post/media">📷 Media</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/users/post/status">✍ Status</a>
                        </li>
                    </ul>
                </li>
            </ul>

            @* Search Form *@
            <form class="d-flex" role="search" onsubmit="HandleSearch">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" @bind="SearchText" />
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

@* Include the correct NavMenu based on UserRole *@
@if (UserRole == "Artist")
{
    <NavMenuArtist />
}
else if (UserRole == "Client")
{
    <NavMenuClient />
}

<div class="container mt-4">
    @Body
</div>

@code {
    private string SearchText { get; set; } = string.Empty;

    private void HandleSearch()
    {
        if (!string.IsNullOrWhiteSpace(SearchText))
        {
            NavigationManager.NavigateTo($"/search?query={SearchText}");
        }
    }
}